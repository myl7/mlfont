---
interface Props {
  pubDate: Date
  updDate?: Date
}

const { pubDate, updDate } = Astro.props

function dateToStr(date: Date) {
  return date.toISOString()
}
const pubDateStr = dateToStr(pubDate)
const updDateStr = updDate ? dateToStr(updDate) : pubDateStr
---

<meta property="article:published_time" content={pubDateStr} />
<meta property="article:modified_time" content={updDateStr} />
<meta property="article:author" content="myl7" />
